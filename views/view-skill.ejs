
<!DOCTYPE html>
<html>
<head>
  <title>Skills</title>
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }
    body {
      font-family: 'Inter', sans-serif;
      background: linear-gradient(135deg, #1A252F, #2D3748);
      min-height: 100vh;
      color: #1A252F;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 20px;
    }
    .container {
      max-width: 1000px;
      width: 90%;
      background: #FFFFFF;
      border-radius: 12px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      padding: 32px;
    }
    h1 {
      font-size: 2rem;
      font-weight: 700;
      color: #1A252F;
      margin-bottom: 20px;
      text-align: center;
    }
    .nav-links {
      margin-bottom: 20px;
      text-align: center;
    }
    .nav-links a {
      color: #1E90FF;
      text-decoration: none;
      font-weight: 600;
      margin: 0 10px;
      transition: color 0.2s;
    }
    .nav-links a:hover {
      color: #0072D6;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }
    th, td {
      padding: 12px;
      text-align: left;
      border-bottom: 1px solid #E2E8F0;
    }
    th {
      background: #F8FAFC;
      font-weight: 600;
      color: #1A252F;
    }
    td img {
      border-radius: 8px;
      object-fit: cover;
    }
    .action-buttons {
      display: flex;
      gap: 10px;
    }
    button, a.button {
      padding: 8px 16px;
      border: none;
      border-radius: 8px;
      font-size: 0.875rem;
      font-weight: 600;
      cursor: pointer;
      text-decoration: none;
      transition: background 0.2s, transform 0.1s;
    }
    button.delete {
      background: #FF4D4F;
      color: #FFFFFF;
    }
    button.delete:hover {
      background: #D9363E;
      transform: translateY(-2px);
    }
    a.edit {
      background: #1E90FF;
      color: #FFFFFF;
      display: inline-block;
    }
    a.edit:hover {
      background: #0072D6;
      transform: translateY(-2px);
    }
    @media (max-width: 768px) {
      .container {
        padding: 16px;
      }
      h1 {
        font-size: 1.5rem;
      }
      th, td {
        font-size: 0.875rem;
        padding: 8px;
      }
      td img {
        width: 60px;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Skills</h1>
    <div class="nav-links">
      <a href="/">Home</a> | <a href="/api/skills/create">Add Skill</a> | <a href="/api/skills/json">JSON View</a>
    </div>
    <table>
      <tr>
        <th>Skill Name</th>
        <th>Description</th>
        <th>Image</th>
        <th>Actions</th>
      </tr>
      <% skills.forEach(function(skill) { %>
        <tr>
          <td><%= skill.skillName %></td>
          <td><%= skill.description %></td>
          <td>
            <% if (skill.projectImg) { %>
              <img src="/<%= skill.projectImg %>" width="80" alt="<%= skill.skillName %>"/>
            <% } %>
          </td>
          <td class="action-buttons">
            <form action="/api/skills/delete/<%= skill._id %>" method="POST" style="display:inline">
              <button type="submit" class="delete" onclick="return confirm('Delete this skill?')">Delete</button>
            </form>
            <a href="/api/skills/edit/<%= skill._id %>" class="edit">Edit</a>
          </td>
        </tr>
      <% }); %>
    </table>
  </div>
</body>
</html>